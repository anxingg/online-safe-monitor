.zx_title{font-size:16px; padding-top:20px;padding-bottom:10px;color:#017a8f;}
.zx_title a.v_list{background: url(../images/view_list.png) no-repeat left center;float: right;display: inline-block;cursor: pointer;padding-left: 22px;}
.zx_title a.v_card{background: url(../images/view_card.png) no-repeat left center;float: right;display: inline-block;cursor: pointer;padding-left: 20px;}
.zx_bg { padding-left:10px;line-height:34px; color:#6da9dc}
.zx_bggr {  padding-left:10px; line-height:34px;color:#589016}
.monitor{color:#555;background:#fff;border:1px solid #e4e4e4;padding:20px 0px 0px 10px;}
.monitor_box{width:145px;padding:0px 0px 0px 0px;height:115px;border-radius:5px;overflow:hidden;border:1px #ccc solid; background:#fff; position: relative;}
.monitor_box em{background: url('../images/j_status.png') no-repeat;
width: 36px;
height: 35px;
display: block;
position: absolute;
bottom: 0;
left: 0;}
.monitor_box em.kongxian{ background-position: 0 0;}
.monitor_box em.jieting{background-position: 0 -41px;}
.monitor_box em.mangzhi{background-position: 0 -83px;}
.monitor_box em.waihu{background-position: 0 -126px;}
.monitor_box:hover{ /* border:1px solid #fd6730;  */background: #ffedd8;}
.monitor li{float:left;padding:0 10px;margin-bottom:20px;position:relative; cursor:pointer;}
.monitor li h4{width:125px;height:28px;line-height:28px;font-size:14px;font-weight:bold;padding:0 10px; background:#e5e5e5;color:#555555;text-align:center;position:relative;}
.monitor li h4 img{position:absolute;right:8px;top:8px;display:none;}
.monitor_box p{font-size:14px;line-height:20px; padding-left:33px;font-family:"Microsoft YaHei","微软雅黑",; padding-top:6px;}
.monitor_bot{width:120px;height:5px;background:url(../images/zxbot.png) no-repeat;}
.monitor_arrow{display:block;width:8px;height:12px;position:absolute;top:10px;left:-7px;background:url(../images/monitor_bg.png) no-repeat;}
b.m_arrowleft{background:url(../images/monitor_bg2.png) no-repeat;left:120px;}
.monitor_box2{width:110px;padding:10px 5px;background:#66c6d8;position:absolute;border-radius:3px;top:0;right:-111px; z-index:10;display:none;border:1px solid #5cb6c7;}
.monitor_box2 .monitor_btn{display:block;width:100%;height:26px;line-height:24px;cursor:pointer;border:none;color:#ffffff;background:#51b1c3;border-radius:3px;font-size:14px;text-decoration:none;}
.monitor_box2 .monitor_btn img{margin:0 5px 0 10px;}
.monitor_box3{width:110px;padding:10px 5px 5px 5px;background:#66c6d8;position:absolute;border-radius:3px;top:0;right:-111px;display:none;border:1px solid #5cb6c7;z-index:20}
.monitor_box3 a{display:block;width:100%;height:26px;line-height:24px;font-size:14px;margin-bottom:5px;cursor:pointer;color:#fff;text-decoration:none;border-radius:2px;}
.monitor_box3 a:hover{background:#51b1c3;}
.monitor_box3 a img{margin:-2px 5px 0 10px;}
.monitor_box3 .monitor_grey{background:#51b1c3;}

.monitor_box4{width:110px;padding:10px 5px;background:#66c6d8;position:absolute;border-radius:3px;top:0;right:-111px; z-index:10;display:none;border:1px solid #5cb6c7;}
.monitor_box4 .monitor_btn{display:block;width:100%;height:26px;line-height:24px;cursor:pointer;border:none;color:#ffffff;background:#51b1c3;border-radius:3px;font-size:14px;text-decoration:none;}
.monitor_box4 .monitor_btn img{margin:0 5px 0 10px;}

