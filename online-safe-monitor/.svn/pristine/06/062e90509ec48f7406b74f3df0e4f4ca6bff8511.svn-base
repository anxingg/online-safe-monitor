@charset "utf-8";
/*CSS Document*/
html,body{ height:100%}
.hmbody{ background:url(../images/home/botbg.png) #f8f8f8 repeat-x bottom; height:100%}
.homeContent{ margin:0px auto;margin-left:100px; padding-top:150px; text-align:center;}
.homeContent div{ float:left; width:30%; background:url(../images/home/line.png) no-repeat right; height:220px; text-align:center; padding-top:30px; }
.homeContent div em{ display:block; background:url(../images/home/icon_homebg.png) no-repeat; width:85px; height:86px; margin:0 auto;}
.homeContent div em.em_1{ background-position:0px 0px;}
.homeContent div em.em_2{ background-position:0px -87px;}
.homeContent div em.em_3{ background-position:0px -175px;}
.homeContent div p{ font-size:25px; text-align:center; margin-top:30px;}
.homeContent div p img{ vertical-align:middle; margin-left:5px;}
.homeContent div p i{ margin-left:3px;}
/*坐席首页*/
.index_box{width:100%;height:auto;position:relative;padding-left:350px;overflow:hidden;background:#f5f5f5;padding:10px;border:1px solid #d7d7d7;}
.index_table{width:100%;}

.index_table .index_left{width:40%;padding:25px;}
.index_table .index_center{width:10px;border-top:none;border-bottom:none;}
.index_right{padding:10px;}
.index_right_tit{color:#364b68;font-size:20px;position:relative;background:url(../images/index/tit_bg.png) repeat-x bottom;height:45px;line-height:40px;}
.index_right_tit span{position:absolute;right:10px;color:#323030;font-size:14px;}
.index_right_table{border:1px solid #ccc;}
.index_left_tit{height:50px;background:url(../images/index/icon.png) no-repeat;font-size:18px;padding:23px 0 0 117px;}
.index_left_con{line-height:40px;color:#141515;}
.index_left_con p{text-indent:2em;}
.more1 a{ color:#0066cc; font-size:14px;}
.more1 a:visited{ color:#0066cc; font-size:14px; font-weight:bold}
