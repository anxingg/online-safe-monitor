@charset "utf-8";
/* CSS Document */
p,h3,dl,dt,dd{padding:0;margin:0;list-style:none;}
.box{width:100%;height:100%;background:url(../images/Slogin/bg_2.jpg) repeat-x top #024e9a;}
.wrap{height:504px;}
.login_wrap{width:495px; height:328px; background:#649f9d; border-radius:4px; margin:0px auto;}
.closelogin { background:url(../images/Slogin/top_clostu.jpg); width:73px; height:19px; margin-top:1px;}
.closelogin a { display:inline-block; height:19px; width:30px;}
.login_comm { width:477px; margin:3px 8px 0px 8px;}
.login_comm .login_comm_login_l { background:url(../images/Slogin/login_limg.jpg); width:121px; height:111px; margin-top:30px; margin-left:38px;}
.login_topl { font-size:16px; line-height:30px; color:#fff; margin-left:10px; font-family:"微软雅黑"; font-weight:bold;}
/*中间登录信息内容*/
.login_comm_login { background:#fff; width:479px; height:162px;}
.middle{width:265px; repeat-x;float:left;padding-left:40px; margin-top:20px;}
.middle li{font-size:14px;margin-top:7px;}
.middle li lable{ vertical-align:middle} 
.middle li span{color:#5e5e5e;width:60px;}
.middle .user{width:230px;height:24px;line-height:24px;border:1px #dde2e4 solid;background:#fff; padding-left:10px;}

.middle .yanzhengma{width:124px;height:30px;line-height:30px;border:none;background:url(../images/Slogin/yanzheng.jpg) no-repeat;padding-left:5px;}
.login_btn{border:none;width:90px;height:28px;line-height:28px;background:#77bab8;cursor:pointer;color:#fafafa; margin-right:76px;  font-size:14px;  border-radius:4px;}
.tishi{color:#F00;font-size:12px;padding-bottom:8px;padding-left:45px;}
label.radio{ margin-left:0px; margin-right:8px; color:#888888}
label.radio input{margin-right:3px; vertical-align:middle; margin-top:-1px;*margin-top: 0px;}