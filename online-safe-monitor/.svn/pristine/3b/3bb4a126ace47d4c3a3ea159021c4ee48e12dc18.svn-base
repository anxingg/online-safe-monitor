@charset "utf-8";
/* CSS Document */
html {padding:0px;margin:0px; overflow:hidden;}
body{width: 100%;  margin: 0; padding: 0; overflow: hidden;z-index:1}
.mainBody{ position:relative; z-index:1; padding-left:182px;overflow:hidden}
#menu {position:absolute;top:0px;width:175px;left:0px;height:auto;background:#e5ecf2; display:block; overflow:auto; overflow-x:hidden;}
#s_center {width: 5px; height: 500px;  position: absolute; top: 0px; left: 175px;border-left: 1px solid #e5ecf2; border-right: 1px solid #bfc7ca;background: url(../images/middle_bg.gif) #e5ecf2 no-repeat -6px center; cursor:pointer}
.cls{background-position: -18px center;}
.mainleftClose{padding-left:7px;}
.mainleftClose #menu{ display:none;}
.mainleftClose #s_center{ left:0px;}
.mainFrame{ width:100%;}
/*s_menu*/
.s_menu{height:auto; padding-top:5px;}
.s_menu ul{ margin:0px auto; width:155px;}
.s_menu ul.l_f_menu li p{ width:152px; height:29px;_height:21px; _padding-top:8px; line-height:28px; background:url(../images/mainbg.png) 0px -34px; cursor:pointer; margin:5px auto 0 auto;}
.s_menu ul.l_f_menu  em{ width:10px; height:9px; display:inline-block; vertical-align:middle; margin-left:8px; margin-right:5px; background-image:url(../images/mainbg.png); background-repeat:no-repeat;_margin-top:1px; overflow:hidden;}
.s_menu ul.l_f_menu  em{ background-position: 0px -94px;}
.s_menu ul.l_f_menu  em.dot02{ background-position: -1px -106px;}
.s_menu ul.l_f_menu li{ height:35px; overflow:hidden}
.s_menu ul.l_f_menu li.current{ height:auto; overflow:visible}
.s_menu ul.l_f_menu li.current em{background-position: -1px -106px;}
.s_menu dl{margin-left:10px;}
.s_menu dl dt{cursor:pointer}
.s_menu dl.sele{height:30px;overflow:Hidden;}
.s_menu dd{ margin-left:15px;padding-left:20px;background:url(../images/lidot.png) no-repeat 12px 7px;}
.s_menu dt {width:100px;height:24px;line-height:24px;clear: both;padding-left: 20px;margin: 5px;color: #2366a6;background:url(../images/admin_bg.png) 0px -30px no-repeat;}
.s_menu dd {width: 120px;height: 18px;line-height: 18px;clear: both;margin: 5px;color: #444444;}
/*bottom*/
.bottom{ height:28px; line-height:28px; background:url(../images/bottombg.png) repeat-x; color:#fff; overflow:hidden;}
.bottom span{ float:right; padding-right:10px; }
.bottom em{ padding-left:20px;}
.paswxfont a{ color:#fff;font-weight:normal;}