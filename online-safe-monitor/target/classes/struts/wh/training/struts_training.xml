<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <!-- 培训 -->
    <package name="training" namespace="/training" extends="struts-default">
        <!--添加/修改岗前培训-->
        <action name="saveOrUpdatePreservice" class="cn.com.wh.training.action.PreserviceTrainingAction" method="saveOrUpdatePreservice">
        </action>
        <!-- 岗前培训列表 -->
        <action name="findPreserviceList" class="cn.com.wh.training.action.PreserviceTrainingAction" method="findPreserviceList">
        </action>
        <!-- 岗前培训详情 -->
        <action name="loadPreserviceDetail" class="cn.com.wh.training.action.PreserviceTrainingAction" method="loadPreserviceDetail">
        	<result name="detail">/wh/logined/training/perserviceTrainingDetail.jsp</result>
        	<result name="update">/wh/logined/training/addPerserviceTraining.jsp</result>
        </action>
        <!-- 删除岗前培训 -->
        <action name="deletePreservice" class="cn.com.wh.training.action.PreserviceTrainingAction" method="deletePreservice">
        </action>
        
        <!--增加修改年度培训计划/记录 -->
           <action name="addOrUpdateTraining" class="cn.com.wh.training.action.TrainingAction" method="addOrUpdateTraining">
        </action>
        
         <!--删除年度培训计划/记录 -->
           <action name="deleteTraining" class="cn.com.wh.training.action.TrainingAction" method="deleteTraining">
        </action>
         <!--年度培训计划/记录列表 -->
           <action name="listTraining" class="cn.com.wh.training.action.TrainingAction" method="listTraining">
        </action>
          <!--年度培训计划/记录详情 -->
           <action name="findTraining" class="cn.com.wh.training.action.TrainingAction" method="findTraining">
        </action>
    </package>
    
</struts>